<p id="notice"><%= notice %></p>

<% cache @submission do %>
<p>
  <strong>Title:</strong>
  <%= @submission.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @submission.url %>
</p>

<p>
  <strong>Community:</strong>
  <%= link_to(@submission.community.name, @submission.community) if @submission.community %>
</p>

<h3>Comments</h3>
<%= render @submission.root_comments %>

<%= link_to 'Edit', edit_submission_path(@submission) %> |
<%= link_to 'Back', submissions_path %>
<% end %>
